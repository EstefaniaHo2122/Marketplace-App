<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActiviy">

    <View
        android:id="@+id/viewTopSplash"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@color/primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTopSplash" />

    <TextView
        android:id="@+id/tvTitleSplash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="@string/SplashTitleA"
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewTopSplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/viewTopSplash" />

    <TextView
        android:id="@+id/tvTitleSplash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        android:text="@string/SplashTitle"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleSplash2"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleSplash2" />

    <TextView
        android:id="@+id/tvSloganSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SplashSlogan"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvTitleSplash2"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleSplash2" />

    <TextView
        android:id="@+id/tvRightReserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleSplash2"
        app:layout_constraintStart_toStartOf="@+id/tvTitleSplash2" />
</androidx.constraintlayout.widget.ConstraintLayout>